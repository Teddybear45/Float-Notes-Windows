<UserControl x:Class="Float_Notes_win.user_controls.CBSep_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Float_Notes_win.user_controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <Grid Height="25" Width="170" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="0" Height="4" RadiusX="1" RadiusY="1" Fill="#FFDDF0FF" />
        <TextBlock Grid.Column="1" Text="{Binding SepTxt}" FontSize="14" HorizontalAlignment="Center" Foreground="#FF517995" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="2" Height="4" Fill="#FFDDF0FF" RadiusX="1" RadiusY="1" />

    </Grid>
</UserControl>
