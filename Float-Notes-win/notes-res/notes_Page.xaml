<Page x:Class="Float_Notes_win.sub_content.notes_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Float_Notes_win.sub_content"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1000"
      Title="notes_page">

    <Page.CommandBindings>
    </Page.CommandBindings>

    <Grid Background="Black" Margin="10 0 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--control bar of notes-->
        <Border BorderBrush="#FF0A0A0C" BorderThickness="2.5" CornerRadius="5" Grid.Row="0" Grid.ColumnSpan="2" Margin="2 2 2 2">
            <Grid ZIndex="0" Background="#FF0A0A0C">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            </Grid>
        </Border>

        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--creating notes-->
            <Grid Grid.Row="0" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="noteNContext" Margin="10" Background="#FF7C9193" Grid.Row="0" Grid.ColumnSpan="3">

                </TextBox>

                <Button Click="btn_click_AddNote" Content="ADD NOTE" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1"/>
                <Button  Content="Refresh" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1"/>
            </Grid>
            <!--main showing notes-->
            <Grid Grid.Row="2">
                <ListBox Margin="20" Background="#FF594141" x:Name="listNotesBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding NContent}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
 
            </Grid>


        </Grid>












    </Grid>
</Page>
